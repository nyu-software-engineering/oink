<h2>{{ user }}'s Profile!</h2>

{{#if addFriend}}
	<button onclick="addFriend('{{ user }}')">{{ addFriend }}</button>
{{/if}}

<h3>Friends:</h3>

<h3>Groups:</h3>
{{#each groups}}
	{{name}}
	<ul>
		{{#each inGroup}}
			<li>{{this}}</li>
		{{/each}}<br><br>
	</ul>
{{/each}}

<script src="/js/add_friend.js"></script>
