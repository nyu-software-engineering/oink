<h2>{{ user }}'s Profile!</h2>

<img src="{{ image.src }}" alt="Anon" width="225" height="225">

<form action='/api/upload/image' enctype="multipart/form-data" method="post">
	<input type="file" name="upload" accept="image/png, image/jpeg">
	<input type="submit" value="Upload">
</form>

{{#if addFriend}}
	<button onclick="addFriend('{{ user }}')">{{ addFriend }}</button><br>
{{/if}}

<h3>Friends:</h3>
<ul>
{{#each friends as |f|}}
	<a href="/user/{{ f.user }}"><li>{{ f.user }}</li></a>
{{/each}}
</ul>

<h3>Groups:</h3>
{{#if admin}}
	{{#each adminGroups}}
		<h3>{{name}}</h3>
		<ul>
			{{#each inGroup}}
				<li>{{this}}</li>
			{{/each}}<br>
		</ul>
		<button>Edit</button>
		<button>Delete</button>
	{{/each}}
	{{#each groups}}
		<h3>{{name}}</h3>
		<ul>
			{{#each inGroup}}
				<li>{{this}}</li>
			{{/each}}<br>
		</ul>
	{{/each}}
{{else}}
	{{#each groups}}
		<h3>{{name}}</h3>
		<ul>
			{{#each inGroup}}
				<li>{{this}}</li>
			{{/each}}<br>
		</ul>
	{{/each}}
{{/if}}


{{#if tip}}
	<form action="/api/change-tip" method="post">
		<h3>Your Default Tip is: <input type="text" name="tip" value="{{ tip }}">%</h3>
		<input type="submit" value="Change Default">
	</form>
{{/if}}


<script src="/js/add_friend.js"></script>
<script src="/js/change_tip.js"></script>